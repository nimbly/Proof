{
    "name": "nimbly/proof",
    "description": "A simple library capable of encoding, decoding, and validating signed JWTs.",
	"keywords": ["php", "jwt", "api", "token"],
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Brent Scheffler",
            "email": "brent@brentscheffler.com"
        }
    ],
	"require": {
		"php": "^8.2",
		"ext-openssl": "*",
        "paragonie/hidden-string": "^2.0",
        "psr/http-message": "^1.0|^2.0",
        "psr/http-server-middleware": "^1.0"
	},
	"autoload": {
		"psr-4": {
			"Nimbly\\Proof\\": "src\/"
		}
	},
	"require-dev": {
        "phpunit/phpunit": "^9.0",
        "vimeo/psalm": "^5.0",
        "symfony/var-dumper": "^5.1",
        "nimbly/capsule": "^3.0"
	}
}
